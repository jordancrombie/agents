{
  "name": "sacp-mcp",
  "version": "1.5.22",
  "description": "MCP server and HTTP gateway for SimToolBox Agent Commerce Protocol (SACP)",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "sacp-mcp": "./dist/index.js",
    "sacp-gateway": "./dist/http-gateway.js",
    "sacp-mcp-apps": "./dist/mcp-apps-server.js"
  },
  "scripts": {
    "build": "tsc && cp -r src/assets dist/",
    "start": "node dist/index.js",
    "start:gateway": "node dist/http-gateway.js",
    "start:apps": "node dist/mcp-apps-server.js",
    "dev": "tsx src/index.ts",
    "dev:gateway": "tsx src/http-gateway.ts",
    "dev:apps": "tsx src/mcp-apps-server.ts",
    "test": "echo 'No tests configured yet'"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jose": "^6.1.3",
    "qrcode": "^1.5.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/qrcode": "^1.5.6",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "mcp",
    "ai",
    "agent",
    "commerce",
    "simtoolbox"
  ],
  "author": "SimToolBox",
  "license": "MIT"
}
